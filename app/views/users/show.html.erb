<% provide(:title, @user.name) %>
<div class="row">
  
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.email %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  
  <div class="col-md-12">
    <%= render "follow_form" if logged_in? %>
    <% if @user.entries.any? %>
      <h3>Posts (<%= @user.entries.count %>)</h3>
      <ol class="entries">
        <%= render @entries %>
      </ol>
      <%= will_paginate @entries %>
    <% end %>
  </div>
</div>
